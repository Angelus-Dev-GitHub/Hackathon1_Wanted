{% extends 'layout.html.twig' %}

{% block title %}
    Wanted
{% endblock %}

{% block content %}
    <div>
        <img class="imgLuffy" src="https://media.discordapp.net/attachments/777856264415215627/778964321094860810/Luffy.jpg" width=400 heigth=auto alt="img Luffy">
        <span class="border-left-0"></span>
    </div>
    <h2 class="form-title">When did you see this person for the last time ?</h2>
    <form class="city-form">
        <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect"></label>
            <select name="city" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected>Choose a city</option>
                {% for city in cities %}
                <option value="{{ city.id }}">{{ city.name }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn-form btn btn-primary">Submit</button>
    </form>
{% endblock %}