{% extends 'layout.html.twig' %}

{% block title %}
    Wanted
{% endblock %}

{% block content %}
    <div class="pictures">
        <div>
            <img class="imgLuffy" src="https://media.discordapp.net/attachments/777856264415215627/778964321094860810/Luffy.jpg" width=600 heigth=auto alt="img Luffy">
        </div>
        <div class="texte">
            <h2 class="profile">Profile</h2>
            <ul>
                <li>Name: Gum-Gum Fruit</li>
                <li>Japanese Name: Gomu Gomu no Mi</li>

            </ul>
        </div>
    </div>
    <h2 class="form-title">When did you see this person for the last time ?</h2>
    <form class="city-form">
        <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect"></label>
            <select name="city" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected>Choose a city</option>
                {% for city in cities %}
                <option value="{{ city.id }}">{{ city.name }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn-form btn btn-primary">Submit</button>
    </form>
{% endblock %}