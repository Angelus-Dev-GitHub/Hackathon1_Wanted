{% extends 'layout.html.twig' %}

{% block content %}

    <div class="search-form">
        <h2 class="search-title">Looking for a dangerous person ?</h2>
        <form class="form-inline my-2 my-lg-0 city-form" method="post" action="/Search/show">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" class="form-control
                       {{ errors.search ? 'is-invalid' : '' }}"
                   aria-label="Search" name="search">
            <button class="btn-submit btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>

{% include 'Home/_carousel.html.twig' %}
    <div>
        <img class="barbele" src="/assets/images/barbele.png">
    </div>
    <div class="cards">
{% for one in wanted %}
    <a href="/wanted/show/{{ one.id }}">
        <img class="wanted-picture" alt="wanted person picture" src="/assets/images/{{ one.picture }}">
    </a>
{% endfor %}
    </div>

{% endblock %}